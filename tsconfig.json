{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es6",
      "dom",
    ],
    "types": [
      "jest",
      "node",
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "preserveWatchOutput": true,
    "incremental": true,
    // https://github.com/rollup/plugins/issues/287#issuecomment-611368317
    // no outDir, declarationDir or declaration
  },
  "include": [
    "src"
  ]
}
