{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom",
    ],
    "types": [
      "jest",
      "node",
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "outDir": "cjs",
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "preserveWatchOutput": true
  },
  "include": [
    "src"
  ]
}